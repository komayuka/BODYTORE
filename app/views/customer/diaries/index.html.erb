<div class="container">
  <div class="row">
    <div class="col">
     <h3>記録カレンダー</h3>
     <p><%= flash[:notice] %></p>


     <%= link_to  "記録する", new_customer_diary_path, class: "btn-flat-border" %>
     <%= month_calendar events: @diaries do |date, diaries| %>
      <%= date.day %>
       <% diaries.each do |diary| %>
       <%= link_to customer_diary_path(@customer, diary.id) do %>
        <%= diary.title %>
        <% end %>
       <% end %>
      <% end  %>
      <!--最小値から-5,最大値から+5,横軸=>日付,縦軸=>kg-->
　　　<%= line_chart @data,curve: false, min: @data.values.min.to_i - 5, max: @data.values.max.to_i + 5, xtitle: "日付", ytitle: "Kg", width: "100%", height: "300px" %>
    </div>
  </div>
</div>