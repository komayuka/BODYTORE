<div class="container">
  <div class="row">
    <div class="col">
     <h3>登録情報編集</h3>
      <%= render 'layouts/error_messages', validation: @customer %>
      <%= form_with model: @customer, local: :true do |f| %>

     <div class="field">
       <%= f.label :customer_image, "画像" %><br />
       <%= f.attachment_field :customer_image %>
     </div>

     <label class="control-label" for="">名前</label>
       <%= f.text_field :customer_name, class: 'form-control' %>

     <label class="control-label" for="">自己紹介</label>
       <%= f.text_field :customer_introduction, class: 'form-control' %>


     <label class="control-label" for="">年齢（半角数字）</label>
       <%= f.text_field :age, class: 'form-control' %>

     <label class="control-label" for="">体重（半角数字/小数点なし）kg</label>
       <%= f.text_field :body_weight, class: 'form-control' %>


     <label class="control-label" for="">身長（半角数字/小数点なし）cm</label>
       <%= f.text_field :height, class: 'form-control' %><br />

      <%= f.submit '更新', class:  'btn-flat-border' %>
      <% end %>
    </div>
  </div>
</div>