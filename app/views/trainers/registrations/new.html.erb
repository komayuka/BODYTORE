<div class="form-wrapper">
 <h2>Sign up</h2>
  <form>
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "trainers/shared/error_messages", resource: resource %>

    <div class="field-item">
     <%= f.label :trainer_name, "名前" %><br />
     <%= f.text_field :trainer_name, autofocus: true %>
    </div>

    <div class="field-item">
     <%= f.label :email, "メールアドレス" %><br />
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field-item">
    <div class="gender">
     <%= f.label :gender, "性別" %><br />
     <%= f.select :gender, Trainer.genders.keys, {prompt:"選択してください"}, class: 'signup_input signup_input--gender error-form--gender' %>
    </div>
    </div>

    <div class="field-item">
     <%= f.label :password %>
     <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
     <% end %><br />
     <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field-item">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions-item">
     <%= f.submit "Sign up", class: "bottom" %>
    </div>
   <% end %>
  </form>
<%= render "trainers/shared/links" %>
</div>