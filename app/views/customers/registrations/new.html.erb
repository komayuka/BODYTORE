 <h2>Sign up</h2>
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "customers/shared/error_messages", resource: resource %>

    <div class="field">
     <%= f.label :customer_name, "名前" %><br />
     <%= f.text_field :customer_name, autofocus: true %>
    </div>

    <div class="field">
     <%= f.label :email, "メールアドレス" %><br />
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
     <%= f.label :age, "年齢" %><br />
     <%= f.text_field :age, autofocus: true %>
    </div>

    <div class="gender">
     <%= f.label :gender, "性別" %><br />
     <%= f.select :gender, Customer.genders.keys, {prompt: "選択してください"}, class: 'signup_input signup_input--gender error-form--gender' %>
    </div>

    <div class="field">
     <%= f.label :password %>
     <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
     <% end %><br />
     <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
     <%= f.submit "Sign up" %>
    </div>
   <% end %>
<%= render "customers/shared/links" %>
