<div class="container">
  <div class="row">
    <div class="col">

    <h2>トレーニングメニュー新規登録</h2>
    <%= form_with model: @training_menu, local: :true do |f| %>

    <div class="field">
      <%= f.label :training_name, "トレーニング名" %><br />
      <%= f.text_field :training_name %>
    </div>

    <div class="category">
      <%= f.label :category, "カテゴリー" %><br />
      <%= f.select :category, TrainingMenu.categories.keys, {prompt:"選択してください"}, class: 'signup_input signup_input--category error-form--category' %>
    </div>

    <div class="field">
      <%= f.label :description, "トレーニング説明" %><br />
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label  :training_status, "ステータス" %><br />
      <%= f.radio_button :training_status, 0 %>未対応
    </div>

    <p></p>
    <div><%= f.submit '新規登録' %></div>
    <% end %>
    </div>
  </div>
</div>