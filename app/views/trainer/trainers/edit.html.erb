<div class="container">
  <div class="row">
    <div class="col">

      <h3>登録情報編集</h3>
       <%= render 'layouts/error_messages', validation: @trainer %>
       <%= form_with model: @trainer, url: trainers_profile_path, local: :true do |f| %>

      <div class="field">
        <%= f.label :trainer_image, "画像" %><br />
        <%= f.attachment_field :trainer_image %>
      </div>

      <label class="control-label" for="">名前</label>
        <%= f.text_field :trainer_name, class: 'form-control' %>

      <label  class="control-label" for="">自己紹介</label>
        <%= f.text_field :trainer_introduction, class: 'form-control' %>
     <br />
      <p><%= f.submit "更新", class: "btn-flat-border" %></p>
      <% end %>
    </div>
  </div>
</div>