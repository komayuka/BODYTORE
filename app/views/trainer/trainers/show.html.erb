<div class="container">
  <div class="row">
    <div class="col">
      <%= render 'layouts/flash' %>

      <h3>マイページ</h3>

       <div class="row">
        <div class="col-lg-4">
         <strong>登録情報</strong>
          <% if current_trainer.trainer_image == nil %>
           <p><%= image_tag asset_path('default.png'), size: '120x120' %></p>
          <% else %>
           <p><%= attachment_image_tag current_trainer, :trainer_image, size: '120x120' %></p>
          <% end %>
          <div><%= link_to 'クチコミ一覧', reviews_path, class: "bottom-border" %></div><br />
        </div>
        <div class="col-lg-8">
         <table class="table">
          <thead>
           <tr>
            <th>名前</th>
            <td><%= current_trainer.trainer_name %></td>
           </tr>
           <tr>
            <th>自己紹介</th>
            <td><%= current_trainer.trainer_introduction %></td>
           </tr>
           <tr>
            <th>性別</th>
            <td><%= current_trainer.gender %></td>
           </tr>
          </thead>
         </table>
      </div>
      <%= link_to "編集", trainers_profile_edit_path, class: "btn-flat-border" %>
    </div>
  </div>
</div>