<div class="container">
  <div class="row">
    <div class="col">
      <p><%= flash[:notice] %></p>

      <h3>マイページ</h3>
      <div>
        <strong>登録情報</strong>
      </div>

        <% if current_trainer.trainer_image == nil %>
        <p><%= image_tag asset_path('default.png'), size: '120x120' %></p>
        <% else %>
        <p><%= attachment_image_tag current_trainer, :trainer_image, size: '120x120' %></p>
        <% end %>
        <div class="col-md-6">
          <table>
        <thead>
          <th></th>
          <tr>
            <th>名前</th>
            <td><%= current_trainer.trainer_name %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= current_trainer.trainer_introduction %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td><%= current_trainer.gender %></td>
          </tr>
          <tr>
            <th></th>
          </tr>

        </thead>
        </div>
      </table>
      <%= link_to "編集", trainers_profile_edit_path %>
    </div>
  </div>
</div>